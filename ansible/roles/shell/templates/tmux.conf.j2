unbind C-b
set -g prefix C-a
bind C-a send-prefix
bind | split-window -h
bind - split-window -v
set -g mouse on
set -g base-index 1
set -g history-limit 10000
set -g default-terminal "screen-256color"
set -g status-style 'bg=#333333 fg=#ffffff'
set -g status-left ' #S '
set -g status-right ' %H:%M %d-%b '